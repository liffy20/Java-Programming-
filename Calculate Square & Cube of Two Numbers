package OneQuestion2;

public class A1Q2 {

	public static void main(String[] args) {

		System.out.println("The following program will calculate the squares and cubes of numbers from 0-10:");
		System.out.println("");
		int square = 1;
		int cube = 1;
		System.out.println("Number                      Square(^2)                     Cube(^3)");
		for (int i = 0; i <= 10; i++) // create a loop that increments a variable (i) from 0-10
		{
			square = i * i; // calculate the square
			cube = i * i * i; // calculate the cube
			System.out.printf("%4d%30d%30d\n", i, square, cube); // display answers in clean format

		}

	}

}
