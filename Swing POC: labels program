import javax.swing.*; // import all needed packages 

import java.awt.Color;
import java.awt.Font;
import java.awt.GridLayout;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class A2Q1 {

	public static void main(String[] args) {
		JFrame frame = new JFrame("Question 1"); // create new frame with label
		frame.setVisible(true); // make sure frame is visible
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); // when X is pressed it closes the frame
		frame.setSize(300, 400); // set size of the frame
		JPanel panel = new JPanel(); // create panel within frame
		panel.setLayout(new GridLayout(3, 3, 5, 10)); // create a grid layout
		frame.add(panel); // add the panel to frame

		Font myFont = new Font("Arial", Font.BOLD + Font.ITALIC, 17); // create font elements for all labels

		JLabel label1 = new JLabel("Red"); // create label
		label1.setBackground(Color.white); // set background color
		label1.setForeground(Color.red); // set foreground color
		label1.setBorder(BorderFactory.createLineBorder(Color.yellow)); // set border line color to yellow
		label1.setFont(myFont); // set font for label

		JLabel label2 = new JLabel("Black");
		label2.setBackground(Color.white);
		label2.setForeground(Color.black);
		label2.setBorder(BorderFactory.createLineBorder(Color.yellow));
		label2.setFont(myFont);

		JLabel label3 = new JLabel("Orange");
		label3.setBackground(Color.white);
		label3.setForeground(Color.orange);
		label3.setBorder(BorderFactory.createLineBorder(Color.yellow));
		label3.setFont(myFont);

		JLabel label4 = new JLabel("Blue");
		label4.setBackground(Color.white);
		label4.setForeground(Color.blue);
		label4.setBorder(BorderFactory.createLineBorder(Color.yellow));
		label4.setFont(myFont);

		JLabel label5 = new JLabel("Magenta");
		label5.setBackground(Color.white);
		label5.setForeground(Color.magenta);
		label5.setBorder(BorderFactory.createLineBorder(Color.yellow));
		label5.setFont(myFont);

		JLabel label6 = new JLabel("Green");
		label6.setBackground(Color.white);
		label6.setForeground(Color.green);
		label6.setBorder(BorderFactory.createLineBorder(Color.yellow));
		label6.setFont(myFont);

		JLabel label7 = new JLabel("Gray");
		label7.setBackground(Color.white);
		label7.setForeground(Color.gray);
		label7.setBorder(BorderFactory.createLineBorder(Color.yellow));
		label7.setFont(myFont);

		JLabel label8 = new JLabel("Pink");
		label8.setBackground(Color.white);
		label8.setForeground(Color.pink);
		label8.setBorder(BorderFactory.createLineBorder(Color.yellow));
		label8.setFont(myFont);

		JLabel label9 = new JLabel("Purple");
		label9.setBackground(Color.white);
		label9.setForeground(new Color(128, 0, 128));
		label9.setBorder(BorderFactory.createLineBorder(Color.yellow));
		label9.setFont(myFont);

		panel.add(label1); // adds respective labels to frame
		panel.add(label2);
		panel.add(label3);
		panel.add(label4);
		panel.add(label5);
		panel.add(label6);
		panel.add(label7);
		panel.add(label8);
		panel.add(label9);

	}

}
